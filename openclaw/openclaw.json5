{
  // Savorg OpenClaw agent policy template
  // Copy (or merge) into `~/.openclaw/openclaw.json`, then restart the gateway.
  //
  // Notes:
  // - Many installs use the `main` agent as the CEO. If so, apply the `savorgceo`
  //   policy below to `main` instead.
  // - Per-agent tool access is enforced via `agents.list[].tools.allow/deny`.
  // - Guard MUST have zero tools. Research MUST have web tools.

  // Global tool configuration (agent-level allow/deny still applies)
  tools: {
    web: {
      // Configure provider/limits as needed; empty object enables defaults.
      search: {},
    },
    agentToAgent: {
      enabled: true,
      // Keep tight ‚Äî only agents that must message other agents.
      allow: ["savorgceo", "savorgmanager"],
    },
  },
  agents: {
    defaults: {
      // Workspace root (must contain agents/, skills/, memory/, etc.)
      workspace: "/Users/savorgserver/clawd",
      tools: { profile: "minimal" },
      heartbeat: {
        // Disabled by default; CEO is enabled below.
        every: "0m",
        prompt: "Read agents/<agent>/HEARTBEAT.md if it exists. If nothing needs attention, reply HEARTBEAT_OK."
      },
      // Safety: cap recursion/fan-out
      subagents: {
        maxConcurrent: 8,
        maxDepth: 2
      },
      sandbox: { mode: "off" }
    },
    list: [
      {
        id: "savorgguard",
        identity: { name: "savorgGuard", emoji: "üõ°Ô∏è", description: "Input security screener" },
        heartbeat: { every: "0m", prompt: "Read agents/guard/HEARTBEAT.md and follow it strictly. If nothing needs attention, reply HEARTBEAT_OK." },
        tools: {
          profile: "minimal",
          // CRITICAL: Guard must have NO tools.
          // If your OpenClaw build doesn't support wildcard deny, replace `["*"]`
          // with an explicit list of tool IDs/groups to block.
          allow: [],
          deny: ["*"],
          exec: { security: "deny", ask: "always" }
        }
      },
      {
        id: "savorgceo",
        identity: { name: "savorgCEO", emoji: "üëë", description: "Strategic interface" },
        heartbeat: { every: "1h", prompt: "Read agents/ceo/HEARTBEAT.md and follow it strictly. If nothing needs attention, reply HEARTBEAT_OK." },
        tools: {
          profile: "full",
          allow: ["group:sessions"],
          // Recommended: keep automation gated to Ops unless explicitly needed.
          deny: ["group:automation"]
        }
      },
      {
        id: "savorgmanager",
        identity: { name: "savorgManager", emoji: "üß≠", description: "Workflow orchestrator" },
        heartbeat: { every: "0m", prompt: "Read agents/manager/HEARTBEAT.md and follow it strictly. If nothing needs attention, reply HEARTBEAT_OK." },
        tools: {
          profile: "minimal",
          allow: ["group:sessions"],
          deny: ["gateway", "message", "group:automation", "group:fs", "group:runtime", "group:web", "exec", "browser", "write", "edit"],
          exec: { security: "deny", ask: "always" }
        }
      },
      {
        id: "savorgresearch",
        identity: { name: "savorgResearch", emoji: "üîé", description: "Deep research" },
        heartbeat: { every: "0m", prompt: "Read agents/research/HEARTBEAT.md and follow it strictly. If nothing needs attention, reply HEARTBEAT_OK." },
        tools: {
          profile: "minimal",
          // HIGH: Research needs web access.
          allow: ["read", "web_search", "web_fetch"],
          deny: ["exec", "write", "edit", "message", "gateway", "group:automation"],
          exec: { security: "deny", ask: "always" }
        }
      },
      {
        id: "savorgplan",
        identity: { name: "savorgPlan", emoji: "üó∫Ô∏è", description: "Implementation planning" },
        heartbeat: { every: "0m", prompt: "Read agents/plan/HEARTBEAT.md and follow it strictly. If nothing needs attention, reply HEARTBEAT_OK." },
        tools: {
          profile: "minimal",
          allow: ["read"],
          deny: ["exec", "write", "edit", "browser", "message", "gateway", "group:automation", "group:web", "group:sessions"],
          exec: { security: "deny", ask: "always" }
        }
      },
      {
        id: "savorgplanreview",
        identity: { name: "savorgPlanReview", emoji: "üß™", description: "Plan review" },
        heartbeat: { every: "0m", prompt: "Read agents/planreview/HEARTBEAT.md and follow it strictly. If nothing needs attention, reply HEARTBEAT_OK." },
        tools: {
          profile: "minimal",
          allow: ["read"],
          deny: ["exec", "write", "edit", "browser", "message", "gateway", "group:automation", "group:web", "group:sessions"],
          exec: { security: "deny", ask: "always" }
        }
      },
      {
        id: "savorgbuild",
        identity: { name: "savorgBuild", emoji: "üõ†Ô∏è", description: "Code implementation" },
        heartbeat: { every: "0m", prompt: "Read agents/build/HEARTBEAT.md and follow it strictly. If nothing needs attention, reply HEARTBEAT_OK." },
        tools: {
          profile: "coding",
          allow: ["group:fs", "group:runtime"],
          deny: ["message", "gateway", "group:automation", "group:web"],
          exec: { security: "allowlist", ask: "always" }
        }
      },
      {
        id: "savorgbuildreview",
        identity: { name: "savorgBuildReview", emoji: "üîç", description: "Code QA" },
        heartbeat: { every: "0m", prompt: "Read agents/buildreview/HEARTBEAT.md and follow it strictly. If nothing needs attention, reply HEARTBEAT_OK." },
        tools: {
          profile: "minimal",
          allow: ["read", "exec"],
          deny: ["write", "edit", "browser", "message", "gateway", "group:automation", "group:web"],
          // Exec is allowlisted at the OpenClaw exec layer (e.g. ~/.openclaw/exec-approvals.json).
          exec: { security: "allowlist", ask: "always" }
        }
      },
      {
        id: "savorgui",
        identity: { name: "savorgUI", emoji: "üé®", description: "Frontend implementation" },
        heartbeat: { every: "0m", prompt: "Read agents/ui/HEARTBEAT.md and follow it strictly. If nothing needs attention, reply HEARTBEAT_OK." },
        tools: {
          profile: "coding",
          allow: ["group:fs", "group:runtime"],
          deny: ["message", "gateway", "group:automation", "group:web"],
          exec: { security: "allowlist", ask: "always" }
        }
      },
      {
        id: "savorguireview",
        identity: { name: "savorgUIReview", emoji: "‚úÖ", description: "UI QA" },
        heartbeat: { every: "0m", prompt: "Read agents/uireview/HEARTBEAT.md and follow it strictly. If nothing needs attention, reply HEARTBEAT_OK." },
        tools: {
          profile: "minimal",
          allow: ["read"],
          deny: ["exec", "write", "edit", "browser", "message", "gateway", "group:automation", "group:web"],
          exec: { security: "deny", ask: "always" }
        }
      },
      {
        id: "savorgops",
        identity: { name: "savorgOps", emoji: "‚öôÔ∏è", description: "Operations" },
        heartbeat: { every: "0m", prompt: "Read agents/ops/HEARTBEAT.md and follow it strictly. If nothing needs attention, reply HEARTBEAT_OK." },
        tools: {
          profile: "full",
          allow: ["group:fs", "group:runtime", "cron"],
          deny: ["message", "gateway", "group:web"],
          exec: { security: "allowlist", ask: "always" }
        }
      },
      {
        id: "savorgsecurity",
        identity: { name: "savorgSecurity", emoji: "üîí", description: "Security auditor" },
        heartbeat: { every: "0m", prompt: "Read agents/security/HEARTBEAT.md and follow it strictly. If nothing needs attention, reply HEARTBEAT_OK." },
        tools: {
          profile: "minimal",
          allow: ["read"],
          deny: ["exec", "write", "edit", "browser", "message", "gateway", "group:automation", "group:web"],
          exec: { security: "deny", ask: "always" }
        }
      }
    ]
  }
}
