{
  "name": "clawcontrol-desktop",
  "version": "0.12.0",
  "description": "ClawControl Desktop - Local-first multi-agent orchestration platform",
  "author": "ClawControl",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "predev": "npx tsc -p tsconfig.json",
    "dev": "npx electron .",
    "build:server": "npm --prefix ../clawcontrol run build",
    "build": "npm run build:server && npx tsc -p tsconfig.json",
    "build:desktop": "npm run build && npx electron-builder",
    "build:mac": "npm run build && npx electron-builder --mac",
    "build:win": "npm run build && npx electron-builder --win",
    "build:linux": "npm run build && npx electron-builder --linux"
  },
  "build": {
    "appId": "com.clawcontrol.desktop",
    "productName": "ClawControl",
    "directories": {
      "output": "dist/release"
    },
    "files": [
      "dist/**",
      "assets/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../clawcontrol/.next/standalone",
        "to": "server",
        "filter": [
          "**/*",
          "!**/.env",
          "!**/.env.*"
        ]
      },
      {
        "from": "../clawcontrol/.next/static",
        "to": "server/apps/clawcontrol/.next/static",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../clawcontrol/public",
        "to": "server/apps/clawcontrol/public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "electron": "29.4.6",
    "electron-builder": "24.13.3",
    "typescript": "^5.0.0"
  }
}
