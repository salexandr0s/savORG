{
  "name": "clawcontrol-desktop",
  "version": "0.1.0",
  "description": "ClawControl Desktop - Local-first multi-agent orchestration platform",
  "author": "ClawControl",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "predev": "npx tsc -p tsconfig.json",
    "dev": "npx electron .",
    "build": "npx tsc -p tsconfig.json && npx electron-builder",
    "build:mac": "npx tsc -p tsconfig.json && npx electron-builder --mac",
    "build:win": "npx tsc -p tsconfig.json && npx electron-builder --win",
    "build:linux": "npx tsc -p tsconfig.json && npx electron-builder --linux"
  },
  "build": {
    "appId": "com.clawcontrol.desktop",
    "productName": "ClawControl",
    "directories": {
      "output": "dist/release"
    },
    "files": [
      "dist/**",
      "assets/**",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "electron": "29.4.6",
    "electron-builder": "24.13.3",
    "typescript": "^5.0.0"
  }
}
